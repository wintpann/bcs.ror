<% if event.event_type=='shopping' %>

  <div class="event shopping_event">
    <a href= <%=user_event_path(user_id, event.id)%> >
      <%= content_tag :span, to_local_time(event.created_at), class: 'time' %>
      <%= content_tag :span, 'Shopping', class: 'type' %>
      <%= content_tag :span, "-#{event.sum} rub", class: 'sum' %>
    </a>
  </div>

