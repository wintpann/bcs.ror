<%= content_tag :h2, "Take stuff from #{@employee.name}" %>
<%= render 'shared/errors' %>
<%= form_for :end_work_session, url: user_employee_delete_work_session_path do |f| %>
  <% @stocks.each do |stock| %>
    <div>
      <%= f.label stock.product.name %>
      <%= f.text_field stock.product.name, value: 0 %>
      <%= content_tag :span, "of #{stock.amount} in stock" %>
    </div>
  <% end %>
  <div>
    <%= f.label :end_work_session %>
    <%= f.check_box :end_work_session %>
  </div>
  <%= f.submit 'Take stuff' %>
<% end %>
