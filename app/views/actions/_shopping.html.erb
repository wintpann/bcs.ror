<h2>Shopping</h2>
<div><%=to_local(event.created_at)%></div>
<table border="1">
  <thead>
    <tr>
      <th>Product</th>
      <th>Amount</th>
    </tr>
  </thead>
  <% event.shopping_events.all.each do |purchase| %>
    <tr>
      <td>
        <%= purchase.product.name %>
      </td>
      <td>
        <%= purchase.amount %>
      </td>
    </tr>
  <% end %>
</table>

<div><%="Total: -#{event.sum} rub"%></div>
