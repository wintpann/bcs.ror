<% if @employee.working? %>
  <h3>You can not start new work session. Finish old one first</h3>
<% elsif !@warehouses.any?%>
  <h3>There are nothing in your warehouse</h3>
<% else %>

  <%= content_tag :h3, "New work session for #{@employee.name}" %>
  <%= render 'shared/errors' %>

  <%= form_for :work_session, url: user_employee_create_work_session_path(params[:user_id], params[:employee_id]) do |f| %>
    <% @warehouses.each do |warehouse| %>
      <div>
        <%= f.label warehouse.product.name %>
        <%= f.text_field warehouse.product.name, value: 0 %>
        <%= content_tag :span, "of #{warehouse.amount} in stock" %>
      </div>
    <% end %>
    <%= f.submit 'Start' %>
  <% end %>

<% end %>
